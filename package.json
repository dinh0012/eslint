{
  "name": "ESLint",
  "version": "1.0.0",
  "description": "ESLint config ",
  "main": "index.js",
  "author": "dinh0012",
  "license": "MIT",
  "scripts": {
    "lint": "eslint ."
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
